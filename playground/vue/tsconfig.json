{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "ESNext", "DOM"
    ],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "skipLibCheck": false,
    "noEmit": true,
    "paths": {
      "@grantify/core": [
        "../../packages/core/dist/index"
      ],
      "@grantify/vue": [
        "../../packages/vue/dist/index"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.d.ts"
  ]
}
