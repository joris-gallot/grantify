{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "ESNext", "DOM"
    ],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "skipLibCheck": true,
    "paths": {
      "@grantify/core": [
        "../core/src/index.ts"
      ]
    },
  },
  "include": [
    "**/*.ts"
  ]
}
